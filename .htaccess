# Redirect root domain to propify.html
DirectoryIndex propify.html

# Redirect index.html to propify.html
RewriteEngine On
RewriteCond %{THE_REQUEST} /index\.html[\s?] [NC]
RewriteRule ^index\.html$ /propify.html [R=301,L]

# Redirect root access to propify.html
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ /propify.html [R=301,L]

